{
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": [
            "DOM",
            "ES2020",
            "ESNext.AsyncIterable"
        ],
        "outDir": "dist",
        "strict": true,
        "strictPropertyInitialization": false,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true
    }
}